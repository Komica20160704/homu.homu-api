<%
  require './Domain/HomuAPI'
  homu = HomuAPI.new
  res = homu.GetRes @ref_no
  head = res['Head']
  bodies = res['Bodies']
  head_picture = head['Picture'].split('.')

  def small_picture picture
    s = picture.split('.')
    return s[0] + 's.jpg'
  end

  def body_line line
    line.chomp!
    if line[0] == '>'
      line = '</span><span class=\'f7 push-content\'>' + line
    end
    return line
  end
%>

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= head['Title']%> - 綜合 - KOMICA</title>
    <meta name="robots" content="all">
    <meta name="keywords" content="KOMICA">
    <meta name="description" content="<%= head['Content']%>">
    <meta property="og:site_name" content="KOMICA">
    <meta property="og:title" content="<%=head['Title']%>">
    <meta property="og:description" content="<%= head['Content']%>">
    <link rel="canonical" href="https://www.ptt.cc/bbs/Gossiping/M.1463296597.A.5E2.html">
    <link rel="stylesheet" type="text/css" href="https://images.ptt.cc/v2.17/bbs-common.css">
    <link rel="stylesheet" type="text/css" href="https://images.ptt.cc/v2.17/bbs-base.css" media="screen">
    <link rel="stylesheet" type="text/css" href="https://images.ptt.cc/v2.17/bbs-custom.css">
    <link rel="stylesheet" type="text/css" href="https://images.ptt.cc/v2.17/pushstream.css" media="screen">
    <link rel="stylesheet" type="text/css" href="https://images.ptt.cc/v2.17/bbs-print.css" media="print">
</head>

<body>
<div id="main-container">
<div id="main-content" class="bbs-screen bbs-content"><div class="article-metaline"><span class="article-meta-tag">作者</span><span class="article-meta-value"><%=head['Name']%>(<%=head['Id']%>)</span></div><div class="article-metaline-right"><span class="article-meta-tag">看板</span><span class="article-meta-value">綜合</span></div><div class="article-metaline"><span class="article-meta-tag">標題</span><span class="article-meta-value"><%=head['Title']%></span></div><div class="article-metaline"><span class="article-meta-tag">時間</span><span class="article-meta-value">20<%=head['Date']%> <%=head['Time']%></span></div>
<%if head['Picture']%><a href="http://homu.komica.org/00/src/<%= head['Picture']%>" target="_blank"><img src="http://homu.komica.org/00/thumb/<%= small_picture head['Picture']%>"></a><%end%><span>

<%= head['Content']%>

--</span>
<span class="f2">※ 發信站: KOMICA, No.<%= head['No']%>
</span><span class="f2">※ 文章網址: <a href="http://homu.komica.org/00/index.php?res=<%= head['No']%>" target="_blank" rel="nofollow">http://homu.komica.org/00/index.php?res=<%= head['No']%></a>
</span><% bodies.each do |body| %><%body['Content'].each_line do |line|%><% next if line == "\n"%><div class="push"><span class="hl push-tag">No.<%= body['No']%> </span><span class="f3 hl push-userid"><%= body['Id']%></span><span class="f3 push-content">: <%= body_line line%></span><span class="push-ipdatetime"><%= body['Date'][3..7]%> <%= body['Time'][0..4]%></span></div><% end %><%if body['Picture']%><a href="http://homu.komica.org/00/src/<%= body['Picture']%>" target="_blank"><img src="http://homu.komica.org/00/thumb/<%= small_picture body['Picture']%>"></a><%end%><% end %></div>

</body>
</html>
